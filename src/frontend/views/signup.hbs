<div class="container text-center">
  <h3>Signup</h3>
  <hr>
  <form action="/signup" , method="POST">
    <div class="container col-lg-4">
      <div class="form-group">
        <input class="form-control text-center" id="username" type="text" name="username_field" placeholder="Username"
          value={{username}}>
        {{#if username_error}}
        <p class="text-danger">{{username_error}}</p>
        {{/if}}
      </div>
    </div>

    <div class="container col-lg-4">
      <div class="form-group">
        <input class="form-control text-center" id="password" type="password" name="password_field"
          placeholder="Password">
        {{#if password_error}}
        <p class="text-danger">{{password_error}}</p>
        {{/if}}
      </div>
    </div>

    <div class="container col-lg-4">
      <div class="form-group">
        <input class="form-control text-center" id="confirm-password" type="password" name="confirm_password_field"
          placeholder="Confirm Password">
        {{#if confirm_password_error}}
        <p class="text-danger">{{confirm_password_error}}</p>
        {{/if}}
      </div>
    </div>

    <div class="container col-lg-4">
      <div class="form-group">
        <input class="form-control text-center" id"discord-username" type="text" name="discord_username_field"
          placeholder="Discord Username" value={{discord_username}}>
        {{#if discord_username_error}}
        <p class="text-danger">{{discord_username_error}}</p>
        {{/if}}
      </div>
    </div>

    <div class="container col-lg-4">
      <div class="form-group">
        <input class="form-control text-center" id"discord-id" type="text" name="discord_id_field"
          placeholder="Discord ID" value={{discord_id}}>
        {{#if discord_id_error}}
        <p class="text-danger">{{discord_id_error}}</p>
        {{/if}}
      </div>
    </div>

    <div class="container col-lg-4">
      <div class="form-group">
        <input class="form-control text-center" id"auth-code" type="password" name="auth_code_field"
          placeholder="Auth Code">
        {{#if auth_code_error}}
        <p class="text-danger">{{auth_code_error}}</p>
        {{/if}}
      </div>
    </div>

    {{#if credentials_error}}
    <div class="container alert alert-danger col-lg-4" role="alert">
      {{credentials_error}}
    </div>
    {{/if}}

    <div class="container">
      <button class="btn btn-primary mb-2" id="signup" type="submit">Signup</button>
      <a class="btn btn-primary mb-2" href="/login">Back to Login</a>
  </form>
</div>
