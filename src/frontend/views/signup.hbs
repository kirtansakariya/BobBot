<div class="container">
  <form action="/signup", method="POST">

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Username</label>
    <div class="col-sm-10">
      <input class="form-control" id="username" type="text" name="username_field">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Password</label>
    <div class="col-sm-10">
      <input class="form-control" id="password" type="password" name="password_field">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Confirm password</label>
    <div class="col-sm-10">
      <input class="form-control" id="confirm-password" type="password" name="confirm_password_field">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Discord username</label>
    <div class="col-sm-10">
      <input class="form-control" id="discord-username" type="text" name="discord_username_field">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Discord ID</label>
    <div class="col-sm-10">
      <input class="form-control" id="discord-id" type="text" name="discord_id_field">
    </div>
  </div>

  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Auth code</label>
    <div class="col-sm-10">
      <input class="form-control" id="auth-code" type="text" name="auth_code_field">
    </div>
  </div>

  <button type="submit" class="btn btn-primary mb-2">Login</button>
  </form>
</div>