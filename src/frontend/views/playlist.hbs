<script src="../js/script.js"></script>
<link rel="stylesheet" href="../css/playlist_styles.css">
<div id="wrapper" class="container text-center">
  <h3>Playlist - {{name}}</h3>
  <hr>
  <div class="row">
    <div class="col-lg-6">
      <h4>Songs</h4>
    </div>
    <div class="col-lg-6">
      <h4>Search</h4>
      <div class="row">
        <select id="type" class="custom-select col-lg-2" required>
          <option value="1">Link</option>
          <option value="2">SC</option>
          <option value="3">YT</option>
        </select>
        <div class="form-group col-lg-10">
        {{!-- <form class="col-lg-10" id="search-form"> --}}
          <input id="search-form" class="form-control" type="text" onkeypress="search(event)" placeholder="Enter to search">
        {{!-- </form> --}}
        </div>
      </div>
      <div class="container">
        <div id="loading" class="d-none">Loading...</div>
        <div id="invalid" class="d-none">Invalid URL</div>
        <div class="container">
          <div id="select" class="text-left d-none row">
            <div class="form-check col-lg-4">
              <input class="form-check-input" type="checkbox">
              <label class="form-check-label">Select all</label>
            </div>
            <div class="col-lg-8 text-right">
              <button class="btn btn-primary">Add Selected</button>
            </div>
          </div>
        </div>
        <div id="results" class="text-left"></div>
      </div>
    </div>
  </div>
</div>
{{!-- <br /> --}}
<footer>
  <div class="container text-center">
    <div class="container">
      <a class="btn btn-primary mb-2" href="/home">Home</a>
    </div>
  </div>
</footer>
