<div class="container text-center">
  <h3>Forgot Password</h3>
  <hr>
  <form action="/forgot", method="POST">
    <div class="container col-lg-4">
      <div class="form-group">
        <input class="form-control text-center" id="username" type="text" name="username_field" placeholder="Username" value={{username}}>
        {{#if username_error}}
          <p class="text-danger">{{username_error}}</p>
        {{/if}}
      </div>
    </div>

    <div class="container col-lg-4">
      <div class="form-group">
        <input class="form-control text-center" id="password" type="password" name="password_field" placeholder="New Password">
        {{#if password_error}}
          <p class="text-danger">{{password_error}}</p>
        {{/if}}
      </div>
    </div>

    <div class="container col-lg-4">
      <div class="form-group">
        <input class="form-control text-center" id="confirm_password" type="password" name="confirm_password_field" placeholder="Confirm New Password">
        {{#if confirm_password_error}}
          <p class="text-danger">{{confirm_password_error}}</p>
        {{/if}}
      </div>
    </div>

    <div class="container col-lg-4">
      <div class="form-group">
        <input class="form-control text-center" id="auth" type="password" name="auth_field" placeholder="Auth Code">
        {{#if auth_code_error}}
          <p class="text-danger">{{auth_code_error}}</p>
        {{/if}}
      </div>
    </div>

    {{#if credentials_error}}
      <div class="container alert alert-danger col-lg-4" role="alert">
        {{credentials_error}}
      </div>
    {{/if}}

    <div class="container">
      <button class="btn btn-primary mb-2" id="forgot_submit" type="submit">Submit</button>
      <a class="btn btn-primary mb-2" id="login" href="/login">Back to Login</a>
    </div>
  </form>
</div>
